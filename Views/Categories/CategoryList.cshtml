@model List<CQRSNight.CQRSDesignPattern.Results.CategoryResults.GetCategoryQueryResult>

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<table class="table table-hover">
    <br />
    <tr>
        <th>Id</th>
        <th>Kategori Ad</th>
        <th></th>
    </tr>

    @foreach(var item in Model)
    {
        <tr>
            <td>@item.CategoryId</td>
            <td>@item.CategoryName</td>
            <td>
                <a href="/Categories/UpdateCategory/@item.CategoryId" class="btn btn-primary">Güncelle</a>
                <a href="/Categories/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a>
            </td>
        </tr>
    }
</table>

<a href="/Categories/CreateCategory/" class="btn btn-success">Yeni Kategori</a>